@Controller
public class HexaController {

	@RequestMapping(value =  "home.htm")
	public String displayHome() {
		return "Home";
	}
	
	@RequestMapping(value =  "tasfrm.htm")
	public String displayTaxForm() {
		return "Home";
	}
	
	@RequestMapping(value =  "home.htm")
	public String processTaxForm() {
		return "Home";
	}
}
